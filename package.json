    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "moment": "^2.22.2",
    "node-sass": "^4.10.0",
    "striptags": "^3.1.1",
    "uglify-js": "^3.4.9"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1"
  }
